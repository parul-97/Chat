<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.paruldhingra.chatapplication.ProfileActivity">
    <ImageView
        android:layout_width="2000dp"
        android:layout_height="300dp"
        android:id="@+id/friend_image"
        android:src="@drawable/default1"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_Name"
        android:text="Display Name"
        android:textSize="25dp"
        android:layout_marginLeft="110dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/friend_image" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_Name"
        android:text="Current user Status"
        android:textSize="15dp"
        android:layout_marginLeft="110dp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:id="@+id/current_user_status"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Friends"
        android:textSize="15dp"
        android:layout_marginLeft="130dp"
        android:textColor="#ffffff"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/current_user_status"
        android:id="@+id/total_friends"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_friends"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:text="SEND FRIEND REQUEST"
        android:id="@+id/send_friend_request"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_friend_request"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:text="DECLINE FRIEND REQUEST"
        android:id="@+id/decline_friend_request"
        />
</RelativeLayout>
